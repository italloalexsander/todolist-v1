<%- include("header") -%>

  <body>

    <div id="heading" class="box">
      <h1>
        <%=listName%> List!
      </h1>
    </div>

    <div class="box">
      <%newItems.forEach((items)=> {%>
        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkbox" value="<%=items._id%>" onChange="this.form.submit()">
            <p>
              <%=items.name%>
            </p>
          </div>
        </form>
        <%})%>

          <form class="item" action="/" method="post">
            <input id="newItem" name="newItem" type="text" placeholder="New Item" autocomplete="off">
            <button type="submit" name="button" value=<%=listName%>>+</button>
          </form>
    </div>

    <%- include("footer") -%>
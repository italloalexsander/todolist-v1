<%- include("header") -%>

  <body>

    <div id="heading" class="box">
      <h1>
        <%=listName%> List!
      </h1>
    </div>

    <div class="box">
      <% for(i=0; i < newItems.length; i++){ %>
        <div class="item">
          <input type="checkbox">
          <p>
            <%=newItems[i]%>
          </p>
        </div>
        <%}%>

          <form class="item" action="/" method="post">
            <input id="newItem" name="newItem" type="text" placeholder="New Item" autocomplete="off">
            <button type="submit" name="button" value=<%=listName%>>+</button>
          </form>
    </div>

    <%- include("footer") -%>